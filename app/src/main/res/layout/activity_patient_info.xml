<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientInfoActivity"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:theme="@android:style/Theme.Holo.NoActionBar"
    android:layout_weight="1"
    android:background="#262E1D"
    android:keepScreenOn="true"
    android:descendantFocusability="afterDescendants"
    >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:background="#262E1D"
        android:id="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="239dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="#262E1D"
            android:weightSum="1"
            android:layout_gravity="left"
            android:scrollbars="vertical"
            android:layout_weight="0.44">

            <LinearLayout
                android:id="@+id/thumb_nail_pic"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="41dp"
                android:paddingLeft="15dp"
                android:background="#262E1D"
                android:scrollbars="vertical">

            <ImageView
                android:id="@+id/tumb"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:background="#262E1D"
                android:src="@drawable/image"
                android:scaleType="fitXY"
                android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thumb_nail_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:background="#262E1D"
                android:paddingTop="45dp"
                android:scrollbars="vertical">
            <TextView
                android:id="@+id/braceletID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#262E1D"
                android:gravity="left"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:paddingLeft="5dp"
                android:textSize="20dp" />


            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#262E1D"
        android:layout_gravity="left"
        android:scrollbars="vertical"
        android:paddingTop="39dp"
        android:layout_weight="0.28">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginTop="39dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/main" />

    </LinearLayout>

        <LinearLayout
                android:id="@+id/backButton"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:background="#262E1D"
                android:gravity="right"
                android:orientation="horizontal"
                android:scrollbars="vertical"
                android:layout_weight="0.30"
                android:paddingRight="18.1dp"
                android:paddingTop="40dp" >

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:drawablePadding="5dp"
                    android:background="#262E1D"
                    android:scaleType="fitXY"
                    android:src="@drawable/back" />
            </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_weight="1"
        android:id="@+id/linearLayout1"
        android:weightSum="1"
        android:layout_marginTop="16dp"
        android:background="#262E1D"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/frameLayout">

        <RelativeLayout
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.63"
            android:src="@drawable/information"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/temperature_picture"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/temperature_pic"
                    android:gravity="center"
                    android:src="@drawable/temperature"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/air_picture"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/oxygen_picture"
                android:layout_marginEnd="56dp">

                <ImageView
                    android:id="@+id/air_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:src="@drawable/air"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/oxygen_picture"
                android:layout_marginEnd="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/oxygen_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:src="@drawable/oxygen"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloodPressure_picture"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginStart="63dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/heartRate_picture">

                <ImageView
                    android:id="@+id/bloodPressure_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="128/95"
                    android:src="@drawable/blood"
                    android:layout_weight="0.03">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/heartRate_picture"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/heartRate_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="76"
                    android:src="@drawable/heart">

                </ImageView>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/infoText"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/linearLayout6"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="41dp"
                    android:layout_height="24dp"
                    android:id="@+id/temperature"
                    android:gravity="center"
                    android:text="@string/degree"
                    android:textSize="16dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="#FFFFFF">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout6"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/linearLayout7"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/air"
                    android:layout_width="19dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="16"
                    android:textSize="16dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="1.5dp"
                    android:textColor="#FFFFFF"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout7"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:paddingTop="20dp">
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="24dp"
                    android:id="@+id/oxygen"
                    android:text="92%"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:paddingTop="4dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="60dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/linearLayout4"
                android:weightSum="1"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/bloodPressure"
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    android:text="128/95"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/heartRate"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:text="76"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center">

                </TextView>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>


    <FrameLayout
        android:layout_width="550dp"
        android:layout_height="524dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="vertical"
        android:id="@+id/frameLayout"
        android:layout_above="@+id/RelativeLayout1"
        android:layout_alignStart="@+id/RelativeLayout1"
        android:layout_marginBottom="22dp">

        <ListView
            android:id="@+id/listView"
            android:layout_width="550dp"
            android:layout_height="524dp"
            android:layout_above="@+id/RelativeLayout1"
            android:layout_alignStart="@+id/RelativeLayout1"
            android:layout_gravity="bottom"
            android:descendantFocusability="beforeDescendants"
            android:divider="#262E1D"
            android:dividerHeight="10.0sp" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_weight="1"
        android:id="@+id/RelativeLayout1"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout8"
                android:layout_alignParentEnd="true">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="49dp"
                    android:background="@drawable/button_urgant"
                    android:clickable="true"
                    android:fontFamily="sans-serif-light"
                    android:text="Urgent Evacuation"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <Button
                    android:id="@+id/saveFile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_edit"
                    android:clickable="true"
                    android:fontFamily="sans-serif-light"
                    android:text="Edit"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="49dp"/>
            </LinearLayout>

        </RelativeLayout>






</RelativeLayout>